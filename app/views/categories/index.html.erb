<% @categories.each do |category| %>
  <hr>
  <div class="row" style="margin-bottom: 10px">
    <div class="span12">
      <div class="row">
        <div class="span4">
          <h3 style="line-height: 24px">
            <%= link_to category.name, category_products_path(category) %>
          </h3>
          <p>
            Category description. Lorem ipsum dolor sit amet, consectetur adipisicing elit... </br>
            <%= link_to "(read more)", category_path(category) %>
          </p>
          <%= link_to category_products_path(category) do %>
            <span class="products-count label label-info">
              <b><%= category.products.count %> products</b>
            </span>
          <% end %>
        </div>
        <% 4.times do %>
          <div class="span2">
            <img class="img-rounded"
                 style="box-shadow: 0 0 5px #888"
                 src="<%= asset_path "kebab.jpg" %>">
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
