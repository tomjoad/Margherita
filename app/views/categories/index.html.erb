<% @categories.each do |category| %>
  <ul class="categories">
    <li>
      <div class="info">
        <h3>
          <%= link_to category.name, category_products_path(category) %>
        </h3>
        <p>
          Category description. Lorem ipsum dolor sit amet, consectetur adipisicing elit,
          sed do eiusmod tempor incididunt ut labore et dolore magna aliqua...
          <%= link_to "(read more)", category_path(category) %>
        </p>
        <span class="products-count">
          <%= link_to category_products_path(category) do %>
            <i class="icon-tag"></i>
            <b> <%= category.products.count %></b>
            products
          <% end %>
        </span>
      </div>
      <ul class="products-icons">
        <% 6.times do %>
          <li><img src="<%= asset_path "kebab.jpg" %>"></li>
        <% end %>
      </ul>
    </li>
  </ul>
<% end %>

