<!DOCTYPE html>
<html lang="pl">
  <!-- HEAD -->
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= javascript_include_tag "application" %>
    <%= stylesheet_link_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <!-- BODY -->
  <body data-spy="scroll" data-target="#nav-affix-left" data-offset="102">
    <!-- NAVBAR -->
    <%= render 'layouts/navbar_fixed_top' %>
    <div id="wrap">
      <div class="container">
        <!-- HEADER -->
        <div class="content">
          <%= render 'layouts/masthead' %>
          <!-- CONTENT -->
          <%= yield %>
        </div>
        <!-- DEBUG  -->
      </div>
      <div id="push"></div>
    </div>
    <!-- FOOTER -->
    <%= render 'layouts/footer' %>
  </body>
</html>
