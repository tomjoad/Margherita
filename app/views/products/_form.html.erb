<% @product.errors.full_messages.each do |msg| %>
<li>
  <%= msg %>
</li>
<% end %>
<%= form_for setup_for(@product), :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :category_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:product, :category_id, @categories, :id, :name) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :fixed_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fixed_number, :class => 'text_field' %>
    </div>
  </div>

  <h3>Variants</h3>
  <%= f.fields_for :variants do |ff| %>
    <div class="control-group">
      <%= ff.label :size, :class => 'control-label' %>
      <div class="controls">
        <%= ff.text_field :size, :readonly => true, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= ff.label :price, :class => 'control-label' %>
      <div class="controls">
        <%= ff.text_field :price, :class => 'text_field' %>
      </div>
    </div>

      <% if ff.object.persisted? %>
        <%= ff.check_box :_destroy %>
        <%= ff.label :_destroy, 'Destroy' %>
      <% end %>
  <% end %>



  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :rows => 5 %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn' %>
  </div>

<% end %>
