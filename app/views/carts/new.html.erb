<%= render 'categories/tabs' %>
</br>
<h1>Your Order</h1>

<table class="table table-striped">
  <thead>
    <tr>
       <th>#</th>
       <th>Name</th>
       <th>Qty</th>
    </tr>
  </thead>
  <tbody>
    <% i = 1 %>
    <% @cart.items.each do |item|%>
      <tr>
        <td><%= i %></td>
        <td><%= item[0] %></td>
        <td><%= item[1] %></td>
      </tr>
      <% i += 1 %>
    <% end %>
  </tbody>
</table>
