<div class="content">
  <% provide(:title, @user.email) %>
  <h3>Twój profil</h3>
  <hr>

  <dl class="dl-horizontal">
    <dt>E-mail:</dt>
    <dd><%= @user.email %></dd>
    <dt>Hasło:</dt>
    <dd><a href="">zmień</a></dd>
  </dl>
  <hr>

  <dl class="dl-horizontal">
    <dt>Adres dostawy:</dt>
    <dd>
      <%= @user.name + " " + @user.last_name %></br>
      <%= "Ul. " + @user.street + " " + @user.home_number %></br>
      <%= @user.zip_code + " " + @user.city %>
    </dd>
  </dl>
  <hr>

  <dl class="dl-horizontal">
    <dt>Telefon kontaktowy:</dt>
    <dd><%= @user.phone %></dd>
  </dl>

<div class="form-actions" style="padding-left: 180px">
  <%= link_to "Edytuj dane", edit_user_path(current_user), class: 'btn btn-warning' %>
</div>

</div>
