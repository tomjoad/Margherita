<% provide(:title, 'Edycja profilu') %>
<%= form_for(@user, html: { class: '' }) do |f| %>
  <div class="row-fluid">
    <div class="span4 offset2 well">
        <fieldset>
          <legend>
            Dane logowania
          </legend>
          <%= f.label :email, "E-mail", class: 'control-label' %>
          <%= f.text_field :email, placeholder: 'E-mail', class: 'span12' %>
          <%= f.label :password, "Hasło", class: 'control-label' %>
          <%= f.password_field :password, placeholder: 'Hasło', class: 'span12' %>
          <%= f.label :password_confirmation, "Powtórz hasło", class: 'control-label' %>
          <%= f.password_field :password_confirmation, placeholder: 'Potwierdź hasło', class: 'span12' %>
          <span class="help-block alert hidden">MOŻNA ZMIENIĆ HASŁO BEZ PODANIA STAREGO?</span>
        </fieldset>
      </div>
      <div class="span4 well">
        <fieldset>
          <legend>
            Dane osobowe
          </legend>
          <%= f.label :name, "Imię", class: 'control-label' %>
          <%= f.text_field :name, placeholder: 'Imię', class: 'span12' %>
          <%= f.label :last_name, "Nazwisko", class: 'control-label' %>
          <%= f.text_field :last_name, placeholder: 'Nazwisko', class: 'span12' %>

          <%= f.label :street, "Ulica", class: 'control-label' %>
          <%= f.text_field :street, placeholder: 'Ulica', class: 'span8' %>
          <%= f.text_field :home_number, placeholder: 'Numer', class: 'span4'%>

          <%= f.label :city, "Miejscowość", class: 'control-label' %>
          <%= f.select(:zip_code, User::ZIP_CODES, {}, class: 'input-small hidden') %>
          <%= f.select(:city, User::CITIES, {}, class: 'span12') %>

          <%= f.label :phone, "Numer telefonu", class: 'control-label' %>
          <%= f.text_field :phone, placeholder: 'Numer', class:'span12' %>

          <!-- <div class="control-group"> -->
          <!--   <%= f.label :distance, :class => 'control-label' %> -->
          <!--   <div class="controls"> -->
          <!--     <%= f.select(:distance, User::DISTANCES) %> -->
          <!--   </div> -->
          <!-- </div> -->

        </fieldset>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12 well">
        <%= f.submit "Zapisz zmiany", :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            user_path(current_user), :class => 'btn' %> <!-- CO TO JEST? -->
      </div>
    </div>
  </div>
<% end %>
