<!-- Cart by the products list view -->

<div class="">
  <ul class="unstyled"
      style="padding-top: 10px">
    <% if there_is_something_in_cart? %>
      <% c = [] %>
      <% @line_items.each do |item| %>
        <% c << item.product.category.name %>
      <% end %>
      <% c.uniq!  %>

      <!-- LISTA ZAKUPÓW -->

      <% c.each do |cat_name| %>
        <li style="border-bottom: 1px solid #e5e5e5;">
          <small><%= cat_name %></small>
        </li>
        <% @line_items.each do |item| %>
          <% if item.product.category.name == cat_name %>
            <li style="padding: 13px 0 0 0;
                       float: left;
                       width: 9%">
              <%= item.quantity %>
              <span>x</span>
            </li>
            <li style="padding: 13px 0 0 0;
                       float: left;
                       width: 84%;">
              <%= item.product.name %>
            </li>
            <li style="padding: 13px 0 0 0;
                       float: left;
                       width: 7%;">
              <button class="btn btn-link" style="padding:0">
                <i class="icon-remove"
                   style="right:0"> <!-- ADD TOOLTIP -->
                </i>
              </button>
            </li>
            <li style="clear: both; margin-bottom: 8px">
              <span style="margin-left: 9%">
                <sup class="muted"><%= item.variant.size %></sup>
              </span>
              <span style="float: right;">
                <%= "%.2f" % item.total_price%><sup> zł</sup>
              </span>

            </li>
          <% end %>
        <% end %>
      <% end  %>
      <li style="width: 50%;
                 float: left;
                 margin-top: 15px;
                 padding: 10px 0 20px 0;
                 border-top: 2px solid #333">
        Do zapłaty
      </li>
      <li style="width: 50%;
                 float: left;
                 text-align: right;
                 margin-top: 15px;
                 padding: 10px 0 20px 0;
                 border-top: 2px solid #333">
        <%= "%.2f" % @cart.price %><sup> zł</sup>
      </li>
    <% else %>
      <li class="center"
          style="padding: 8px 0 15px 0;">
        Cart is empty!
      </li>
    <% end %>
  </ul>
</div>
<div class="clearfix">
<% if there_is_something_in_cart?%>
  <%= link_to "Continue", new_cart_path, class: 'btn btn-block btn-success btn-large' %>
<% else %>
  <button class="btn btn-block btn-success btn-large disabled">Continue</button>
<% end %>
</div>
