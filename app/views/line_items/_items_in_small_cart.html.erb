    <ul class="line-items">
    <% if there_is_something_in_cart? %>
      <% c = [] %>
      <% @line_items.each do |item| %>
        <% c << item.product.category.name %>
      <% end %>
      <% c.uniq!  %>
      <!-- LISTA ZAKUPÓW -->
      <% c.each do |cat_name| %>
        <!-- <li class="btn btn-inverse btn-block btn-small disabled" -->
        <!--     style="float: left; margin: 10px 0 5px 0"> -->
        <!--   <%= cat_name %> -->
        <!-- </li> -->
        <% @line_items.each do |item| %>
          <% if item.product.category.name == cat_name %>
            <li class="item">
              <div class="row-fluid">
                <div class="column-one">
                  <div class="item-quantity">
                    <%= item.quantity %>
                  </div>
                  <div class="item-name">
                    <%= item.product.name %> [<%= item.variant.size %>]
                  </div>
                </div>
                <div class="column-two">
                  <div class="item-remove">
                    <%= link_to({ :controller => "line_items", :action => "destroy", :id => item.variant.id, :cart => "small" }, { :class => "icon-link" }) do %>
                      <i class="icon-remove"></i>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="row-fluid">
                <div class="column-one">
                  <div class="item-category">
                    <small class="muted"><%= cat_name %></small>
                  </div>
                </div>
                <div class="column-two">
                  <small class="muted item-price"><%= "%.2f" % item.total_price%>zł</small>
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      <% end  %>
      <li class="summary">
        <div class="row-fluid">
          <div class="column-one">
            <div class="pull-left">
              Koszt dostawy
            </div>
          </div>
          <div class="column-two">
            <div class="pull-right">
              0,00<sup> zł</sup>
            </div>
          </div>
        </div>
        <div class="row-fluid">
          <div class="column-one">
            <div class="pull-left">
              Do zapłaty
            </div>
          </div>
          <div class="column-two">
            <div class="pull-right">
              <%= "%.2f" % @cart.price %><sup> zł</sup>
            </div>
          </div>
        </div>
      </li>
    <% else %>
      <li class="empty">
        <small class="muted">Twój koszyk jest pusty!</small>
      </li>
    <% end %>
  </ul>
</div>

