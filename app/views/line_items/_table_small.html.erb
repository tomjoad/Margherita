<!-- Cart by the products list view -->
<div class="row-fluid hidden-desktop">
  <div class="span12">
    <ul class="breadcrumb">
      <li style="width: 100%">
        <i class="icon-shopping-cart"></i> Koszyk
      </li>
    </ul>
  </div>
</div>
<div class="row-fluid">
  <div id="small-cart" class="span12 cart-small">
    <%= render 'line_items/items_in_small_cart' %>
  </div>
<div class="clearfix">
  <% if there_is_something_in_cart? %>
    <%= link_to "Kontynuuj", new_cart_path, class: 'btn btn-large btn-primary btn-block' %>
  <% else %>
    <button class="btn btn-primary btn-block disabled">Kontynuuj</button>
  <% end %>
</div>
