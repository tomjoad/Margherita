<% provide(:title, 'Zaloguj się') %>

<div class="row-fluid">
  <div class="span4 offset4 well">
    <%= form_for(:session, url: sessions_path, :html => {:class => ""}) do |f| %>
      <fieldset>
        <legend>
          Panel logowania
        </legend>
          <%= f.label :email, "Login (e-mail)", class: 'control-label'%>
          <%= f.text_field :email, class: 'span12'%>
          <%= f.label :password, "Hasło", class: 'control-label' %>
          <%= f.password_field :password, class: 'span12' %>
          <%= f.submit "Zaloguj się", class: 'btn btn-primary' %>
          <%= link_to "Wstecz", :back, class: 'btn btn-submit' %>
      </fieldset>
    <% end %>
    <p>
      Nie masz jeszcze konta?
      <%= link_to "Załóż je teraz!", signup_path %>
    </p>
  </div>
</div>



