<!-- Form for signing in from navigation bar -->

<% if current_user %>

  <ul class="nav">
    <li><%= link_to 'Log out', signout_path %></li>
  </ul>

<% else %>

  <%= form_for(:session, :url => sessions_path) do |f| %>
    <%= f.text_field :email, :class => 'span2', :placeholder => 'Email'%>
    <%= f.text_field :password, :class => 'span2', :placeholder => 'Password'%>
    <%= f.submit 'Sign in', :class => 'btn'%>
  <% end %>

<% end %>
