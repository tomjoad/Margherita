<%= render 'line_items/cart_content' %>

<%= form_for @order do |f| %>
  Address Info:

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :cart, :value => session[:cart] %>
  <%= f.hidden_field :total_price, :value => @cart.price %>

  <%= f.label :name %>
  <%= f.text_field :name %><br />

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br />

  <%= f.label :city %>
  <%= f.text_field :city %><br />

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %><br />

  <%= f.label :home_number %>
  <%= f.text_field :home_number %><br />

  <%= f.label :phone %>
  <%= f.text_field :phone %><br />

 <%= f.submit%>
<% end%>
