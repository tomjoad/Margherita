<%= render 'line_items/cart_content' %>

<%= form_for @order do |f| %>
  Address Info:

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :total_price, :value => @cart.price %>

  <%= f.label :name %>
  <%= f.text_field :name, value: @user.name %><br />

  <%= f.label :last_name %>
  <%= f.text_field :last_name, value: @user.last_name %><br />

  <%= f.label :city %>
  <%= f.text_field :city, value: @user.city %><br />

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code, value: @user.zip_code %><br />

  <%= f.label :street %>
  <%= f.text_field :street, value: @user.street %><br />

  <%= f.label :home_number %>
  <%= f.text_field :home_number, value: @user.home_number %><br />

  <%= f.label :phone %>
  <%= f.text_field :phone, value: @user.phone %><br />

 <%= f.submit%>
<% end%>
