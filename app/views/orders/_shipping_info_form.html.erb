<div class="well">

  <fieldset>
    <legend style="margin:0">
      Dane kontaktowe
    </legend>
    <div class="control-group">
      <%= f.label :name, "Imię",  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, value: @user.name, placeholder: 'Imię', class: 'span6' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :last_name, "Nazwisko",  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :last_name, value: @user.last_name, placeholder: 'Nazwisko', class: 'span6' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :phone, "Numer telefonu",  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :phone, value: @user.phone, placeholder: 'Numer telefonu', class: 'span6' %>
      </div>
    </div>
  </fieldset>
  <fieldset>
    <legend style="margin:0;">
      Rodzaj dostawy
    </legend>
    <div class="control-group">
      <%= f.label :distance, "Dostępne opcje", class: 'control-label' %>
      <div class="controls">
        <%= f.select(:distance, Order.possible_distances(@cart.price), {}, {class: 'span6'}) %>
      </div>
    </div>
  </fieldset>
  <fieldset>
    <legend>
      Adres dostawy
    </legend>
    <div class="control-group hidden">
      <%= f.label :zip_code, "Kod pocztowy",  class: 'control-label' %>
      <div class="controls">
        <%= f.select(:zip_code, User::ZIP_CODES, {selected: @user.zip_code}, {class: ''}) %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :city, "Miejscowość",  class: 'control-label' %>
      <div class="controls">
        <%= f.select(:city, User::CITIES, {selected: @user.city}, {class: 'span6'}) %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :street, "Ulica",  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :street, value: @user.street, placeholder: 'Ulica', class: 'span6' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :home_number, "Numer domu",  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :home_number, value: @user.home_number, placeholder: 'Nr', class: 'span6' %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <a class="btn btn-success" onclick="calcRoute()">
          Sprawdź odległość na mapie
        </a>
      </div>
    </div>
  </fieldset>

</div>

<%#= f.hidden_field :products_price, :value => @cart.price %>

<div class="well">
  <p id="total"></p>
  <div id="map_canvas" style="height: 400px; width: 100%"></div>
</div>

<div class="well">
  <button type="submit" class="btn btn-primary">
    Przejdź dalej <i class="icon-ok icon-white"></i>
  </button>
  <a href="<%= url_for new_cart_path %>" class="btn btn-submit">
    Wróć do koszyka <i class="icon-shopping-cart icon-white"></i>
  </a>
</div>
