<div class="well">

  <fieldset>
    <h3>Choose Delivery Option</h3>
    <hr>
    <div class="control-group">
      <%= f.label :distance, "Available options", class: 'control-label' %>
      <div class="controls">
        <%= f.select(:distance, Order.possible_distances(@cart.price), {}, {class: 'span6'}) %>
      </div>
    </div>
  </fieldset>

</div>

<div id="address-field" class="well">

  <fieldset>
    <h3>Enter Delivery Address</h3>
    <hr>
    <div class="control-group hidden">
      <%= f.label :zip_code, "Zip Code",  class: 'control-label' %>
      <div class="controls">
        <%= f.select(:zip_code, User::ZIP_CODES, {selected: @user.zip_code}, {class: ''}) %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :city, "City",  class: 'control-label' %>
      <div class="controls">
        <%= f.select(:city, User::CITIES.sort, {selected: @user.city}, {class: 'span6'}) %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :street, "Street",  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :street, value: @user.street, placeholder: 'Margherita', class: 'span6' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :home_number, "Home No.",  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :home_number, value: @user.home_number, placeholder: '23/123', class: 'span6' %>
      </div>
    </div>

    <button id="show-map" class="btn btn-medium btn-block btn-success">Pokaż mapę</button>

     <div class="control-group hidden">
      <%= f.label "geolocation", "Dokładna geolokacja",  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field "geolocation", value: "", placeholder: 'dł. i szer. geograficzna', class: 'span6', disabled: "" %>
      </div>
    </div>
    <div class="control-group hidden">
      <%= f.label "computed_distance", "Odległość",  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field "computed_distance", value: "", placeholder: '0,0 km', class: 'span6', disabled: "" %>
      </div>
    </div>
  </fieldset>

</div>


<div id="order-map">
  <div class="well">
    <a id="btn" class="btn btn-large btn-block btn-success" href="#map_container">
      Kliknij, aby wyszukać adres i obliczyć odległość.
    </a>
  </div>

  <div id="map_container" class="well">
    <dl id="delivery_info" class="dl-horizontal well alert-info" style="margin:0">
      <dt>Szukany adres:</dt>
      <dd id="address_info">?</dd>
      <dt>Obliczona odległość:</dt>
      <dd id="computed_distance">?</dd>
    </dl>
    <div id="map_canvas" style="height: 400px; width: 100%"></div>
    <div class="well bg-warning" style="margin:0;">
      <legend style="margin:0">Mapa wskazuje błędny adres?</legend>
      <strong>Nic nie szkodzi!</strong><br>
      Wystarczy że przeciągniesz pomarańczowy marker nad
      poprawne miejsce dostawy (twój dom, mieszkanie itp.).
      <strong>Pamiętaj</strong> aby podany przez Ciebie adres
      zgadzał się ze wskazaniem pomarańczowego markera -
      dzięki temu nasz kierowca dojedzie na pewno na czas!
    </div>
  </div>
</div>

<div class="well">

  <fieldset>
    <h3>Enter Required Personal Info</h3>
    <hr>
    <div class="control-group">
      <%= f.label :name, "First Name",  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, value: @user.name, placeholder: 'John', class: 'span6' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :last_name, "Last Name",  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :last_name, value: @user.last_name, placeholder: 'Kowalsky', class: 'span6' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :phone, "Phone No.",  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :phone, value: @user.phone, placeholder: '123456789', class: 'span6' %>
      </div>
    </div>
  </fieldset>

</div>
