<div class="content">
  <% if user_is_admin_or_seller? %>
    <% Order::STATES.split(' ').each do |state| %>
      <%= link_to state, orders_path(:filter => state) %> |
    <% end %>
  <% elsif current_user.role.customer? %>
    <ul class="nav nav-tabs">
      <li class="<%= current_page?(url_for(:controller => "orders", :action => "index", :pending => "true")) ? 'active' : '' %>">
        <%= link_to 'In progress', :controller => "orders", :action => "index", :pending => true %>
      </li>
      <li class="<%= current_page?(url_for(:controller => "orders", :action => "index", :history => true)) ? 'active' : '' %>">
        <%= link_to "History", :controller => "orders", :action => "index", :history => true %>
      </li>
    </ul>
  <% else %>
  <% end %>

  <%= render 'table'%>

</div>
