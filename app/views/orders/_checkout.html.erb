<dt>Adres dostawy:</dt>
<dd>
  <%= @order.try(:name) %>&nbsp<%= @order.try(:last_name) %></br>
  ul. <%= @order.try(:street) %>&nbsp<%= @order.try(:home_number) %></br>
  <%#= @order.try(:zip_code) %><!-- &nbsp --><%#= @order.try(:city) %><!-- </br></br> -->
</dd>
<dt>Telefon kontaktowy:</dt>
<dd>
  <%= @order.try(:phone) %></br></br>
</dd>

<%= f.hidden_field :name, value: @user.name %>
<%= f.hidden_field :last_name, value: @user.last_name %>
<%= f.hidden_field :street, value: @user.street %>
<%= f.hidden_field :home_number, value: @user.home_number %>
<%= f.hidden_field :city, value: @user.zip_code %>
<%= f.hidden_field :zip_code, value: @user.city %>
<%= f.hidden_field :phone, value: @user.phone %>

<div class="well">
  <button type="submit" class="btn btn-primary">
    Przejdź dalej <i class="icon-ok icon-white"></i>
  </button>
  <a href="<%= url_for new_cart_path %>" class="btn btn-submit">
    Wróć do koszyka <i class="icon-shopping-cart icon-white"></i>
  </a>
</div>

