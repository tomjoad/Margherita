@import "bootstrap";

/* universal */

html {
   overflow-y: scroll;
}

body {
   background-color: #e8e8e8;
   /* background: url(<%=asset_path "background.jpg"%>) no-repeat scroll center 40px #990101; */
   padding: 0
}

.nav {
   float: right
}


.content {
    border: 1px solid rgba(0, 0, 0, 0.25);
    border-radius: 6px 6px 6px 6px;
    box-shadow: 0 1px 5px rgba(0, 0, 0, 0.15);
    padding: 15px;
    margin-bottom: 0;
    overflow: hidden;
}

.content-inner {

   /* background: url(<%=asset_path "bg-fire.jpg"%>) no-repeat scroll 0 0 #000000; */
   padding: 120px 10px;
}

.content-icons img {
   margin: 0;
   height: 180px;
}

.icon-big {
   padding: 10px 10px 10px 10px;
   height: 200px;
}

.row-features {

}

section {
   overflow: auto;
}

textarea {
   resize: vertical;
}


.center {
   text-align: center;
}

.center h1 {
   margin-bottom: 10px;
}

/* typography */

h1, h2, h3, h4, h5, h6 {
   line-height: 1;
}

h1 {
   font-size: 3em;
   letter-spacing: -2px;
   margin-bottom: 30px;
   text-align: center;
}

h2 {
   font-size: 1.7em;
   letter-spacing: -1px;
   margin-bottom: 30px;
   text-align: left;
   font-weight: normal;
   color: #999;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}

/* header */

.navbar {
  margin-bottom: 0px;
}

.navbar-inner {
  box-shadow: 0 1px 10px rgba(0, 0, 0, 0.25), 0 -1px 0 rgba(0, 0, 0, 0.1) inset;
}

#logo {
  float: left;
  margin: 15px 10px 15px 0;
  font-size: 2.5em;
  color: #000;
  text-transform: uppercase;
  letter-spacing: -1px;
  padding-left: 5px;
  font-weight: bold;
  line-height: 1;
  &:hover {
     color: #990101;
     text-decoration: none;
  }
}

.bottom-register {
  background: url(<%=asset_path "footer-bg.png"%>) repeat scroll 0 0 transparent;
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.15);
  padding: 8px;
  text-align: center;
}

footer {
  margin-top: 0;
  padding-top: 5px;
  padding-bottom: 5px;
  /* border-top: 1px solid #eaeaea; */
  color: #999;
  a {
   color: #555;
   &:hover {
      color: #222;
     }
  }
  small {
    float: center;
    text-align: center;
  }
}

/* GRID CSS */

ul#grid {
    list-style: none outside none;
    margin: 20px auto 0;
    width: 576px;
}
#grid li {
    float: left;
    margin: 0 5px 10px;
}

#grid li a:hover img {
    opacity: 0.9;
}
#grid li img {
    border: 0px dotted #58595B;
    height: 120px;
    margin: 0;
    padding: 7px;
    width: 120px;
}
#grid li a {
    display: block;
}
