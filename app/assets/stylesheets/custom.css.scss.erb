/* IMAGE SLIDER */

/* Positioning */

#slider #slides_image .slide.one {
    left: 400px;
    top: 0;

    -webkit-animation: fadeOne 16s infinite;
    -moz-animation: fadeOne 16s infinite;
    animation: fadeOne 16s infinite;
}

