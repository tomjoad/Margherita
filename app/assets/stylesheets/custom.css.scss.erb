/* CATEGORIES MENU */

#talltabs-maroon {
    border-top: 0px solid #CD324F;
    clear: left;
    float: left;
    font-weight: bold;
    overflow: hidden;
    margin: -15px 0 0 0;
    padding: 0;
    width: 100%;
}
#talltabs-maroon ul {
    float: left;
    left: 50%;
    list-style: none outside none;
    margin: 0;
    padding: 0;
    position: relative;
    text-align: center;
}
#talltabs-maroon ul li {
    display: block;
    float: left;
    list-style: none outside none;
    margin: 0;
    padding: 0;
    position: relative;
    right: 50%;
}
#talltabs-maroon ul li a {
    background: none repeat scroll 0 0 #CD324F;
    color: #FFFFFF;
    display: block;
    float: left;
    margin: 0 1px 0 0;
    padding: 30px 10px 6px;
    text-decoration: none;
}
#talltabs-maroon ul li a:hover {
    padding: 35px 10px 6px;
}
#talltabs-maroon ul li.active a, #talltabs-maroon ul li.active a:hover {
    padding: 40px 10px 6px;
}
