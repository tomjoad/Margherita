@import "bootstrap";

/* universal */

html {
   overflow-y: scroll;
}

body {
   background-color: #e8e8e8;
   /* background: url(<%=asset_path "background.jpg"%>) no-repeat scroll center 40px #990101; */
   padding: 0
}

.nav {
   float: right
}


.content {

    border: 1px solid rgba(0, 0, 0, 0.25);
    border-radius: 6px 6px 6px 6px;
    box-shadow: 0 1px 5px rgba(0, 0, 0, 0.15);
    padding: 15px;
    margin-bottom: 0;
    overflow: hidden;
}

.content-inner {

   /* background: url(<%=asset_path "bg-fire.jpg"%>) no-repeat scroll 0 0 #000000; */
   padding: 120px 10px;
}

.content-icons img {
   margin: 0;
   height: 180px;
}


section {
   overflow: auto;
}

textarea {
   resize: vertical;
}


.center {
   text-align: center;
}

.center h1 {
   margin-bottom: 10px;
}

/* typography */
.thumbnails {
   margin: 20px;
   padding: 40px 49px 20px 49px;
   width: 770px;
}

.thumbnails .span2 {
   width: 140px;
}

.thumbnails > li {
   margin: 7px;
}

.thumbnail .caption {
   padding: 9px 9px 0 9px;
}

.caption p {
   font-size: 11px
}

h1 {
   font-size: 3em;
   letter-spacing: -2px;
   margin-bottom: 30px;
   text-align: center;
}

h2 {
   font-size: 1.7em;
   letter-spacing: -1px;
   margin-bottom: 30px;
   text-align: left;
   font-weight: normal;
   color: #999;
}

/* header */

.navbar {
  margin-bottom: 0px;
}

.navbar-inner {
  box-shadow: 0 1px 10px rgba(0, 0, 0, 0.25), 0 -1px 0 rgba(0, 0, 0, 0.1) inset;
}

.content .navbar-inner {
  margin: -15px;
  border-radius: 6px 6px 0 0;

}


#logo {
  float: left;
  margin: 15px 10px 15px 0;
  font-size: 2.5em;
  color: #000;
  text-transform: uppercase;
  letter-spacing: -1px;
  padding-left: 5px;
  font-weight: bold;
  line-height: 1;
  &:hover {
     color: #990101;
     text-decoration: none;
  }
}

.bottom-register {
  background: url(<%=asset_path "footer-bg.png"%>) repeat scroll 0 0 transparent;
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.15);
  padding: 8px;
  text-align: center;
}

footer {
  margin-top: 0;
  padding-top: 5px;
  padding-bottom: 5px;
  /* border-top: 1px solid #eaeaea; */
  color: #999;
  a {
   color: #555;
   &:hover {
      color: #222;
     }
  }
  small {
    float: center;
    text-align: center;
  }
}

/* GRID CSS */

ul#grid {
    list-style: none outside none;
    margin: 20px auto 0;
    width: 576px;
}
#grid li {
    float: left;
    margin: 0 5px 10px;
}

#grid li a:hover img {
    opacity: 0.9;
}
#grid li img {
    border: 0px dotted #58595B;
    height: 120px;
    margin: 0;
    padding: 7px;
    width: 120px;
}
#grid li a {
    display: block;
}

/* YELLOW BUTTON */

.button {
        font-family: 'Droid Sans', sans-serif;
        -webkit-border-radius: 25px;
        -moz-border-radius: 25px;
        border-radius: 25px;
        margin: -2px;
        border: 1px solid rgba(0,0,0,0.4) ;
        box-shadow: inset 0 1px 0 0 rgba(255,255,255,0.5),
                                0 0 1px 1px rgba(255,255,255,0.8),
                                0 0 0 6px rgba(0,0,0,0.06),
                                0 0 0 3px rgba(0,0,0,0.1);
        cursor: pointer;
        width: 300px;
        height: 40px;
}
.title {
        padding: 10px;
        float: left;
        color: #fff;
        font-weight: 800;
        font-size: 20px;
        text-shadow: 1px 1px rgba(0,0,0,0.2);
        text-transform: uppercase;
        text-align: center;
        border-right: 0px solid rgba(255,255,255,0.3);
}
.price {
        padding: 10px;
        float: left;
        color: rgba(0,0,0,0.4);
        font-weight: 800;
        font-size: 20px;
        text-shadow: 1px 1px rgba(255,255,255,0.3);
        text-transform: uppercase;
        border-left: 1px solid rgba(0,0,0,0.2);
}

/* colors */
.yellow {
        background: rgb(255,214,94);
        background: url(data:image/svg+xml;base64,);
        background: -moz-linear-gradient(top,  rgba(255,214,94,1) 0%, rgba(254,191,4,1) 100%);
