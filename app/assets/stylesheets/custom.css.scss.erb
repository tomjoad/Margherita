    left: -100px;
    top: 500px;

    -webkit-transform: rotate(270deg);
    -moz-transform: rotate(270deg);
    transform: rotate(270deg);

    -webkit-animation: fadeFour 16s infinite;
    -moz-animation: fadeFour 16s infinite;
    animation: fadeFour 16s infinite;
