    top: 1000px;

    -webkit-transform: rotate(180deg);
    -moz-transform: rotate(180deg);
    transform: rotate(180deg);

    -webkit-animation: fadeThree 16s infinite;
    -moz-animation: fadeThree 16s infinite;
    animation: fadeThree 16s infinite;
