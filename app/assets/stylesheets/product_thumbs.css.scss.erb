/* Product thumbnails stylesheet */

.span3a {
    width: 210px;
    .thumbnail {
        background-color: white;
        padding: 8px;
        .caption {
            padding: 5px 0 0 0;
            .category {
                font-size: 11px;
                text-transform: uppercase;
                color: #7c7c7c;
                margin-bottom: 2px;
            }
            .title {
                color: #555;
                font-weight: bold;
                font-size: 12px;
                text-transform: uppercase;
                clear: both;
                display: block;
                margin-bottom: 5px;
            }
            .price {
                color: #d35a5a;
                font-size: 13px;
                font-weight: bold;
                line-height: 32px;
            }
            .btn {
                float: right;
                width: auto;
                margin: 0;
            }
        }
    }
}

